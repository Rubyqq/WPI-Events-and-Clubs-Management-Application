<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c13341"
    tools:context=".MainActivity" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/WPI_Logo"
            android:src="@drawable/wpi_whitelogo"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/studentId"
            android:layout_gravity="center_horizontal"
            android:background="#fcf6f7"
            android:layout_marginTop="20dp"
            android:hint="Student ID"
            android:autoText="false" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passworda"
            android:layout_gravity="center_horizontal"
            android:background="#fcf6f7"
            android:layout_marginTop="10dp"
            android:hint="Password" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remembr Me"
            android:id="@+id/checkBox"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="119dp"
            android:layout_marginTop="20dp"
            android:textColor="#fcf6f7" />

        <Button
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:text="Login"
            android:id="@+id/login_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background1"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up for WPI clubs and events"
            android:id="@+id/signupwords"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:singleLine="false" />
    </LinearLayout>
</LinearLayout>
