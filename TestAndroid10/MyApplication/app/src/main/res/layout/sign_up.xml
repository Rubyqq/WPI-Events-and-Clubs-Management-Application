<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c13341"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/WPI_Logo"
            android:src="@drawable/wpi_whitelogo"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="200dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c13341">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/firstname"
            android:layout_weight="1"
            android:hint="First Name"
            android:background="#fcf6f7"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="0dp"
            android:textSize="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lastname"
            android:layout_weight="1"
            android:hint="Last Name"
            android:background="#fcf6f7"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c13341">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:id="@+id/studentID"
            android:inputType="number"
            android:layout_weight="0"
            android:hint="studentID"
            android:background="#fcf6f7"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c13341">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c13341">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/PhoneNumber"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#fcf6f7"
            android:hint="Phone Number"
            android:textSize="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:background="#fcf6f7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Email"
            android:textSize="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/gender"
            android:background="#fcf6f7"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Gender(F or M)"
            android:textSize="10dp" />

        <Spinner
            android:id="@+id/departmentspinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Department"
            android:background="#fcf6f7"

        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordb"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#fcf6f7"
            android:hint="Password"
            android:textSize="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirmPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#fcf6f7"
            android:hint="Confirm Password"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c13341">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="Join now"
            android:id="@+id/joinnowbutton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_background1"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign in"
            android:textColor="@android:color/white"
            android:id="@+id/Sign_in2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</LinearLayout>